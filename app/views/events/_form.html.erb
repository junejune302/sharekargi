<%= form_for@event,:url => {:action => :new} do |f| %>

  <div class="field">
    <%= f.label :タイトル %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :内容 %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :開始時刻 %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :終了時刻 %><br>
    <%= f.datetime_select :end_time %>
  </div></br>
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
