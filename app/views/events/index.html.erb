<p id="notice"><%= notice %></p>

<h1>登録内容一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>開始時刻</th>
      <th>終了時刻</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <% @events.each do |event| %>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= link_to '表示', edit_user_events %></td>
        <td><%= link_to '編集', edit_user_events_path(event) %></td>
        <td><%= link_to '削除', edit_user_events_path, method: :destroy, data: { confirm: '削除していいですか?' } %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい家事分担を登録', new_user_events_path(current_user) %>
