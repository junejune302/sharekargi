<div class="container-fluid">
	<div class="row">
        <div class="col-sm-8"><h1><%= @user.name %>さんのプロフィール編集</h1></div>
    </div>
</div> 

<div class="form-horizontal" role="form">
    <%= form_for(@user) do |f| %>
  
<div class="form-horizontal" role="form">
    <fieldset>
        <legend><%= @user.name %>さんのプロフィール編集</legend>
            <div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">メールアドレス</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="inputEmail" placeholder="Email">
                    </div>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="col-lg-2 control-label">パスワード</label>
                    <div class="col-lg-10">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                    </div>
            <div class="form-group">
                <label for="inputPassword" class="col-lg-2 control-label">パスワード確認</label>
                    <div class="col-lg-10">
                        <input type="password_confirmation" class="form-control" id="inputPassword" placeholder="password_confirmation">
                    </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-success">更新</button>
                </div>
            </div>
    </fieldset>
</div>
</div>
    