<div class="container-fluid">
	<div class="row">
        <div class="col-sm-8"><h1><%= @user.name %>さんのプロフィール編集</h1></div>
    </div>
</div> 

<div class="form-horizontal" role="form">
    <%= form_for(@user) do |f| %>

  <div class="form-group">
   <label for="inputname" class="col-sm-2 control-label">名前：</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div> 
  </div>

 <div class="form-group">
   <label for="inputemail" class="col-sm-2 control-label">メールアドレス：</label>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div> 
 </div>

 <div class="form-group">
   <label for="inputname" class="col-sm-2 control-label">パートナー名：</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div> 
  </div>
      
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "更新", class: "btn btn-primary" %>
   </div> 
 </div>
 <% end %>
 </div> 
 </div>           
    