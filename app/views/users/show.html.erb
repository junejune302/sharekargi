<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %>の基本情報</h1>
    </section>
  </aside>    
</div>

<div class="form-horizontal" role="form">
    <%= form_for(@user) do |f| %>

  <div class="form-group">
   <label for="inputname" class="col-sm-2 control-label">名前：</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div> 
  </div>

 <div class="form-group">
   <label for="inputemail" class="col-sm-2 control-label">メールアドレス：</label>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div> 
 </div>

 <div class="form-group">
   <label for="inputname" class="col-sm-2 control-label">パートナー名：</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div> 
  </div>
 
 <% end %>
 </div> 
 </div>          